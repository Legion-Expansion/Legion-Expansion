{
  "blend_root": {
    "nodes": {
      "being_built": {
        "type": "bind_pose"
      },
      "dead": {
        "type": "bind_pose"
      },
      "ghost": {
        "type": "bind_pose"
      },
      "living": {
        "entries": [
          {
            "name": "deploy",
            "node": {
              "anim_name": "deploy",
              "looping": false,
              "type": "playback"
            },
            "reset": "playback_reset",
            "transitions": [
              {
                "transition_forward": {
                  "func": "anim_complete",
                  "target": "idle"
                },
                "transition_reverse": {
                  "func": "anim_complete",
                  "target": "idle"
                }
              }
            ],
            "type": "sequence_entry"
          },
          {
            "name": "idle",
            "node": {
              "anim_name": "open",
              "looping": true,
              "type": "playback"
            },
            "reset": "playback_reset",
            "transitions": [
              {
                "transition_forward": {
                  "func": "is_attached",
                  "target": "attached"
                },
                "transition_reverse": {
                  "func": "is_attached",
                  "target": "attached"
                }
              }
            ],
            "type": "sequence_entry"
          }
        ],
        "transition_seek": {
          "false_target": "idle",
          "func": "is_attached",
          "true_target": "attached"
        },
        "type": "sequence"
      }
    },
    "type": "unit_state"
  }
}
